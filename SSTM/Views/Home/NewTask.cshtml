@{
    ViewBag.Title = "NewTask";
}

<h2>NewTask</h2>
<div ng-app="NewTaskApp">
    <div ng-controller="NewTaskCtrl" layout="column" ng-cloak class="md-inline-form">
        <md-content layout-padding>
            <div>
                <form>
                    <div layout-gt-sm="row">
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Name</label>
                            <input required md-no-asterisk ng-model="task.name">
                            <div ng-messages="task.name.$error">
                                <div ng-message="required">This is required.</div>
                            </div>
                        </md-input-container>
                    </div>

                    <div layout="row">
                        <div layout-md="row">
                            <md-input-container class="md-block">
                                <label>Description</label>
                                <textarea ng-model="task.description" md-maxlength="150" rows="5" md-select-on-focus></textarea>
                            </md-input-container>
                        </div>
                        <div layout="column">
                            <md-input-container>
                                <label>Start Date</label>
                                <md-datepicker ng-model="task.startDate"></md-datepicker>
                            </md-input-container>
                            <md-input-container>
                                <label>Due Date</label>
                                <md-datepicker ng-model="task.dueDate"></md-datepicker>
                            </md-input-container>
                            <md-input-container>
                                <label>Complete Date</label>
                                <md-datepicker ng-model="task.completeDate"></md-datepicker>
                            </md-input-container>
                        </div>
                    </div>
                    <md-input-container class="md-block">
                        <label>Comments</label>
                        <textarea ng-model="task.comments" md-maxlength="150" rows="5" md-select-on-focus></textarea>
                    </md-input-container>

                    <section layout="row" layout-sm="column" layout-align="center center" layout-wrap>
                        <md-button class="md-raised" ng-click="createNewTask()">Create</md-button>
                    </section>
                </form>
            </div>
        </md-content>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/Scripts/app/tasks/newtask.js")
    @Scripts.Render("~/Scripts/app/tasks/task-service.js")
}