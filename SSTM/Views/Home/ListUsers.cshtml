
<div ng-app="UsersApp" style="padding:50px">
    <div ng-controller="UsersCtrl" layout-lg="column" ng-cloak md-padding class="md-inline-form">
        <md-content layout-padding>
            <md-toolbar class="md-theme-light">
                <h2 class="md-toolbar-tools">
                    <span>Users</span>
                </h2>
            </md-toolbar>

            <md-content class="md-padding" layout="column">

                <!--
                <md-input-container class="md-block" flex-gt-sm md-padding>
                    <label>Filter Current State</label>
                    <md-select ng-model="currentState" ng-init="currentState=-1">
                        <md-option ng-repeat="state in states" value="{{state.key}}">
                            {{state.value}}
                        </md-option>
                    </md-select>
                </md-input-container>
                -->
                <h1 ng-show="tasks.length == 0">No tasks asigned</h1>
                <div flex-xs flex-gt-xs="50" ng-repeat="user in users">
                    <md-card md-theme="default" md-theme-watch>
                        <md-card-title>
                            <md-card-title-text>
                                <span class="md-headline">{{user.name}}</span>
                                <span class="md-subhead">{{user.email}}</span>
                                <span class="md-subhead">{{user.phone}}</span>
                            </md-card-title-text>
                            <md-card-title-media>
                                <div class="md-media-sm card-media">
                                    <img ng-src="{{user.image}}" class="md-card-image">
                                </div>
                            </md-card-title-media>
                        </md-card-title>
                        <md-card-actions layout="row" layout-align="end center">
                            <md-button ng-click="showDialogUsers($event,user.id)">Show Tasks</md-button>
                        </md-card-actions>
                    </md-card>
                </div>
            </md-content>

        </md-content>
    </div>

</div>

@section scripts {
    @Scripts.Render("~/Scripts/app/users/users.js")
    @Scripts.Render("~/Scripts/app/users/user-service.js")
    @Scripts.Render("~/Scripts/app/tasks/task-service.js")
}

@section styles {
    <link href="@Url.Content("~/Styles/users/users.css")" rel="stylesheet" type="text/css" />
}

