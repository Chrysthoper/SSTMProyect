<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/angular-material.css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">

        #div-loader {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1000;
            background-color: white;
            opacity: .8;
        }

        .main-loader {
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -32px; /* -1 * image width / 2 */
            margin-top: -32px; /* -1 * image height / 2 */
            display: block;
        }

    </style>

</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top ext-context">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Super Simple Task Manager", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("My Tasks", "Index", "Home")</li>
                        <li>@Html.ActionLink("Assign a Task", "NewTask")</li>
                        <li>@Html.ActionLink("List Users", "ListUsers")</li>
                        <li></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li> <p class="navbar-text">@Html.Encode(User.Identity.Name)</p></li>
                        <li>@Html.ActionLink("Sign Out", "LogOff", "Login")</li>
                    </ul>
                }                 
            </div>
        </div>
    </div>
    <div class="container body-content">

        <div id="div-loader">
            <img src="/Content/Images/loader.gif" class="main-loader" />
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Super Simple Task Manager by Chrysthoper Contreras</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-animate/angular-animate.min.js")
    @Scripts.Render("~/Scripts/angular-aria/angular-aria.min.js")
    @Scripts.Render("~/Scripts/angular-messages.min.js")
    @Scripts.Render("~/Scripts/angular-messages.js")
    @Scripts.Render("~/Scripts/angular-material/angular-material.js")

    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
