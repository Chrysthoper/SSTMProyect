@{
    ViewBag.Title = "Login";
}

<div ng-app="LoginApp" class="container">
    <div ng-controller="LoginController" class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Login</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" style="display: block;">
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" ng-model="formData.email">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In" ng-click="authentication()">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-sm-offset-3 alert alert-danger" ng-show="ShowError">
                                    {{ alert }}
                                </div>
                            </form>
                            <form id="register-form" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="text" name="name" id="name" tabindex="1" class="form-control" placeholder="Name" ng-model="form.name">
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" ng-model="form.email">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="phone" tabindex="1" class="form-control" placeholder="Phone" ng-model="form.phone">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now" ng-click="register()">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-sm-offset-3 alert alert-danger" ng-show="ShowErrorRegistration">
                                    {{ alertRegistration }}
                                </div>
                                <div class="col-sm-6 col-sm-offset-3 alert alert-success" ng-show="EmailSend">
                                    A token has been send to you email. Please click in the url to confirm the token.
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/app/login/login.js")
    @Scripts.Render("~/Scripts/app/login/logic-form.js")
}

@section styles {
    <link href="@Url.Content("~/Styles/login/login.css")" rel="stylesheet" type="text/css" />
}